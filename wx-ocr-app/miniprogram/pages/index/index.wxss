.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
}

.header {
  padding: 20rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.settings-icon {
  position: absolute;
  right: 0;
  font-size: 40rpx;
  padding: 20rpx;
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
}

.preview-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.preview-image {
  width: 80%;
  height: 600rpx;
  border-radius: 16rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.preview-actions {
  display: flex;
  gap: 20rpx;
}

.action-button {
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  background-color: #f0f0f0;
}

.action-button.primary {
  background-color: #07c160;
  color: white;
}

.action-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
  padding: 0 40rpx;
}

.main-button {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  height: 100rpx;
  border-radius: 16rpx;
  background-color: white;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.icon {
  font-size: 40rpx;
}

.footer {
  padding: 20rpx 0;
}

.history-button {
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  background-color: #f0f0f0;
  color: #666;
  font-size: 28rpx;
} 