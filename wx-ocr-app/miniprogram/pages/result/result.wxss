.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.image-section {
  height: 35vh;
  padding: 20rpx;
  background-color: #fff;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.result-section {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  background-color: #07c160;
  color: white;
  border-radius: 8rpx;
  min-width: 120rpx;
}

.result-content {
  flex: 1;
  background-color: white;
  padding: 20rpx;
  border-radius: 16rpx;
}

.result-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.analysis-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.analysis-content {
  flex: 1;
  background-color: white;
  padding: 20rpx;
  border-radius: 16rpx;
}

.analysis-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
} 